// task 2: define position to store a window position
// prototype syntax...
export function Position(x = 0, y = 0) {
    this.x = x;
    this.y = y;
}

Position.prototype.move = function (newX, newY) {
    this.x = newX;
    this.y = newY;
};

// task 2: define position to store a window position
// class syntax...
// export class Position {
//   constructor(x=0, y=0) {
